<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="test-suite">
    <test name="Test in Chrome">
        <parameter name="Browser" value="chrome.local"/>
        <classes>
            <class name="tests.LoginTests"/>
            <class name="tests.BookTicketTests"/>
            <class name="tests.RegisterTests"/>
            <class name="tests.ChangePasswordTests"/>
            <class name="tests.MyTicketTests"/>
            <class name="tests.ForgotPasswordTests"/>
            <class name="tests.TimeTableTests"/>
        </classes>
    </test>

    <test name="Test in Firefox">
        <parameter name="Browser" value="firefox.local"/>
        <classes>
            <class name="tests.LoginTests"/>
            <class name="tests.BookTicketTests"/>
            <class name="tests.RegisterTests"/>
            <class name="tests.ChangePasswordTests"/>
            <class name="tests.MyTicketTests"/>
            <class name="tests.ForgotPasswordTests"/>
            <class name="tests.TimeTableTests"/>
        </classes>
    </test>
</suite>
